<?xml version="1.0"?>
<config>
    <modules>
        <KuafuSoft_Nexmo>
            <version>0.1.1</version>
        </KuafuSoft_Nexmo>
    </modules>
    <global>
        <blocks>
            <ks_nexmo>
                <class>KuafuSoft_Nexmo_Block</class>
            </ks_nexmo>
        </blocks>
        <helpers>
            <ks_nexmo>
                <class>KuafuSoft_Nexmo_Helper</class>
            </ks_nexmo>
        </helpers>
        <models>
            <ks_nexmo>
                <class>KuafuSoft_Nexmo_Model</class>
                <resourceModel>ks_nexmo_mysql4</resourceModel>
            </ks_nexmo>
        </models>
        <resources>
            <ks_nexmo_setup>
                <setup>
                    <module>KuafuSoft_Nexmo</module>
                </setup>
            </ks_nexmo_setup>
            <ks_nexmo_customer_setup>
                <setup>
                    <module>KuafuSoft_Nexmo</module>
                    <class>Mage_Customer_Model_Entity_Setup</class>
                </setup>
            </ks_nexmo_customer_setup>
        </resources>
    </global>
    <frontend>
        <layout>
            <updates>
                <ks_nexmo>
                    <file>ks_nexmo.xml</file>
                </ks_nexmo>
            </updates>
        </layout>
        <routers>
            <nexmo>
                <use>standard</use>
                <args>
                    <module>KuafuSoft_Nexmo</module>
                    <frontName>nexmo</frontName>
                </args>
            </nexmo>
        </routers>
        <events>
            <controller_action_postdispatch_checkout_onepage_savePayment>
                <observers>
                    <sendBillingCode>
                        <class>ks_nexmo/observer</class>
                        <method>sendBillingCode</method>
                    </sendBillingCode>
                </observers>
            </controller_action_postdispatch_checkout_onepage_savePayment>
            <controller_action_predispatch_checkout_onepage_saveOrder>
                <observers>
                    <validateBillingNumber>
                        <class>ks_nexmo/observer</class>
                        <method>validateBillingNumber</method>
                    </validateBillingNumber>
                </observers>
            </controller_action_predispatch_checkout_onepage_saveOrder>
        </events>
    </frontend>
    <adminhtml>
        <translate>
            <modules>
                <KuafuSoft_Nexmo>
                    <files>
                        <default>KuafuSoft_Nexmo.csv</default>
                    </files>
                </KuafuSoft_Nexmo>
            </modules>
        </translate>
        <layout>
            <updates>
                <ks_nexmo>
                    <file>ks_nexmo.xml</file>
                </ks_nexmo>
            </updates>
        </layout>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <ks_nexmo translate="title" module="KuafuSoft_Nexmo">
                                            <title>Nexmo Settings</title>
                                        </ks_nexmo>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
</config>
